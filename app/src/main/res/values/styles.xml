<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="CardCommonTitle">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="CommonCardView" parent="CardView">
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CommonFloatingButton">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="CommonButton">
        <item name="android:background">@drawable/rounded_corners_blue_bg</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="CommonEditText">
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:background">@drawable/rounded_corners_white_bg</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    
    <style name="CommonTitle">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CommonProductDetails">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

</resources>